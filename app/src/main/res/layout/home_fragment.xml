<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/reward_card_width"
        android:layout_height="@dimen/reward_card_height_with_shadow"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/cardBackground"
            android:layout_width="@dimen/reward_card_width"
            android:layout_height="@dimen/reward_card_height"
            android:transitionName="rewardCardBackground23"/>

        <View
            android:id="@+id/borderShadow"
            android:layout_width="@dimen/reward_card_width"
            android:layout_height="@dimen/reward_card_border_shadow_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadow_yellow" />
    </RelativeLayout>

</RelativeLayout>